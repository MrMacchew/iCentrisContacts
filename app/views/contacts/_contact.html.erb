<% @contacts.each do |contact| %>
  <tr id="<%= contact.id %>">
		<td><%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, contact, method: :delete, remote: true %> 
    <%= link_to contact.name, contact %></td>
    <td><%= contact.phone %></td>
    <td><%= contact.email %></td>
    <td><%= contact.address %></td>
  </tr>
<% end %>
