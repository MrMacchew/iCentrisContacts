<!DOCTYPE html>
<html>
<head>
  <title>ICentrisContacts</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
				<%= yield %>

				<div class='container-fluid'>
								<div class='row'>
										<div id="user_nav" class='text-center'>
		<% if current_user %>
			Logged in as <%= current_user.email %>
			<%= link_to "Log out".html_safe, log_out_path %>
		<% else %>
						<%= link_to "<button type='button' class='btn btn-primary'>Sign up</button>".html_safe, sign_up_path %> or 
						<%= link_to "<button type='button' class='btn btn-default'>Log In</button>".html_safe, log_in_path %>
		<% end %>
	</div>
	</div>
	</div>

	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>

</body>
</html>
